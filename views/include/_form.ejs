<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
  <div class="new_user">
    <div class="form-group">
      <label for="name" class="text-light">Name</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="name" value="" placeholder="nhap" />
    </div>
    <div class="form-group">
      <label for="Email" class="text-light">Email</label>
      <input
        type="text"
        name="email"
        value=""
        placeholder="example@gmail.com"
      />
    </div>
    <div class="form-group">
      <label for="msv" class="text-light">msv</label>
      <input type="text" name="msv" value="" placeholder="msv" />
    </div>
    <div class="form-group">
      <label for="lop" class="text-light">lop</label>
      <input type="text" name="lop" value="" placeholder="lop" />
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
